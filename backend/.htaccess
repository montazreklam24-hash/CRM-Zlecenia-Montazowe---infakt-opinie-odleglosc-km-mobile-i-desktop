# Zablokuj bezpośredni dostęp do plików PHP (oprócz api/)
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

# Chroń folder uploads - zezwalaj tylko na obrazy
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Zezwalaj na dostęp do obrazów w uploads
    RewriteCond %{REQUEST_URI} ^/uploads/
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule \.(jpg|jpeg|png|gif|webp|pdf)$ - [L]
    
    # Blokuj inne pliki w uploads
    RewriteCond %{REQUEST_URI} ^/uploads/
    RewriteRule .* - [F,L]
</IfModule>

